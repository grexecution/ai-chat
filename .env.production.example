# ===================================
# COPY THIS FILE TO .env.production
# AND FILL IN YOUR ACTUAL VALUES
# ===================================

# Database (You'll get these from Ploi after creating the database)
DATABASE_URL="postgresql://ploi_username:password@127.0.0.1:5432/ploi_database"

# NextAuth Settings
NEXTAUTH_URL=https://your-domain.com  # Or http://your-ip.nip.io for testing
NEXTAUTH_SECRET=  # Generate with: openssl rand -base64 32

# AI Server Connection (Your second Hetzner server)
OLLAMA_URL=http://YOUR-AI-SERVER-IP:11434  # Replace with actual IP
OLLAMA_API_KEY=your-secret-password  # You'll create this password

# Default AI Model
DEFAULT_MODEL=llama3.2:3b

# Node Environment
NODE_ENV=production